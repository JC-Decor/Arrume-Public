@{
    ViewData["Title"] = "Obrigado";
    Layout = "_Layout";
}

<section class="thanks">
    <div class="container">
        <div class="card center thanks__card">
            <div class="check-badge" aria-hidden="true">✓</div>
            <h2>Obrigado!</h2>
            <p class="muted">Recebemos seu pedido. Em breve você receberá no WhatsApp as opções de capoteiros/estofadores.</p>
            <a href="/" class="btn secondary">Voltar</a>
        </div>
    </div>
</section>

@section Scripts {
<script>
  // GA4: conversão (lead gerado) ao carregar a página Obrigado
  if (window.gtag) {
    gtag('event', 'generate_lead', {
      value: 1
      // Ex.: currency: 'BRL', campaign: 'arrume_form' (opcional)
    });
  }

  // Meta Pixel: Lead
  if (window.fbq) {
    fbq('track', 'Lead');
  }
</script>
}
