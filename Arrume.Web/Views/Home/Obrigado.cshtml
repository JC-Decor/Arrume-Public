@{
    ViewData["Title"] = "Obrigado";
    Layout = "_Layout";
}

<section class="thanks">
    <div class="container">
        <div class="card center thanks__card">
            <div class="check-badge" aria-hidden="true">✓</div>
            <h2>Obrigado!</h2>
            <p class="muted">Recebemos seu pedido. Em breve você receberá no WhatsApp as opções de capoteiros/estofadores.</p>
            <a href="/" class="btn secondary">Voltar</a>
        </div>
    </div>
</section>

@section Scripts {
<script>
  // Garante que o dataLayer exista
  window.dataLayer = window.dataLayer || [];

  // Dispara evento de conversão para o GTM (capturado via Trigger de Custom Event)
  dataLayer.push({
    event: 'generate_lead',
    value: 1
    // Você pode adicionar dados extras se quiser mapear no GTM/GA4:
    // currency: 'BRL',
    // page_type: 'obrigado',
    // origem_form: 'arrume_form'
  });

  // Meta Pixel: Lead
  if (window.fbq) {
    fbq('track', 'Lead');
  }
</script>
}
